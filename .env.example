# Environment
NODE_ENV=development

# Server
PORT=3001

# Database
# Use 'postgres' when running with Docker, 'localhost' when running manually
# Port 5432 is the internal Docker port, use 5434 to connect from host machine
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=aow
POSTGRES_PASSWORD=aow
POSTGRES_DB=aow

# JWT
JWT_SECRET_KEY=secret_key
JWT_EXPIRATION=3600

# Game configurations
# For booleans, use 0 or 1 instead of false/true.

# Game - Province Improvement Prices
PRODUCTION_IMPROVEMENT_UNITY_PRICE=67.5
TAXATION_IMPROVEMENT_UNITY_PRICE=55.9

# Game - Province Incoming
INCOMING_PER_PRODUCTION_LEVEL=3.85
INCOMING_PER_TAXATION_LEVEL=2.98

# Game - Province Passives
PROVINCE_INCOMING_REDUCTION_BY_WARS_DURATION=30
PROVINCE_INCOMING_REDUCTION_BY_COALITION_DURATION=30

# Game - Military Power
