MILITARY_POWER_PER_TANK=2.38
MILITARY_POWER_PER_AIRCRAFT=4.19
MILITARY_POWER_PER_WARSHIP=4
MIN_MILITARY_POWER_DIFF_TO_GUARANTEE_INDEPENDENCE=65

# Game - Opinions
