FROM node:14.17-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start based on NODE_ENV
CMD if [ "$NODE_ENV" = "production" ]; then \
      npm run build && npm start; \
    else \
      npm run dev; \
    fi
